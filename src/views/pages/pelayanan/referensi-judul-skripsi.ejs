<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>
        <%= data.appName %>
    </title>
    <link href="/public/images/UNH.png" rel="icon">
    <script src="//unpkg.com/alpinejs" defer></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <%- include ("../../components/header.ejs") %>
</head>

<body>
    <%- include ("../../components/ui/navbar.ejs") %>

    <main class="container my-5">
        <h1 class="mb-4  text-gray-800 font-weight-bolder">Referensi Judul Skripsi</h1>
        <div class="card shadow mb-5">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Daftar Skripsi</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Judul</th>
                                <th>Nama Penulis</th>
                                <th>Tahun Terbit</th>
                                <th>Program Studi</th>
                            </tr>
                        </thead>
                        <tfoot class="table-light">
                            <tr>
                                <th>Judul</th>
                                <th>Nama Penulis</th>
                                <th>Tahun Terbit</th>
                                <th>Program Studi</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% if (data.skripsi.length === 0) { %>
                                <tr>
                                    <td colspan="4" class="text-center">Tidak ada data skripsi yang tersedia.</td>
                                </tr>
                            <% } else { %>
                                <% data.skripsi.map(skripsiMahasiswa => { %>
                                    <tr>
                                        <td><%= skripsiMahasiswa.dataValues.judul %></td>
                                        <td><%= skripsiMahasiswa.dataValues.name %></td>
                                        <td><%= skripsiMahasiswa.dataValues.tahun %></td>
                                        <td><%= skripsiMahasiswa.dataValues.programStudi %></td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <footer class="container">
            <p class="float-end"><a href="#">Back to top</a></p>
            <p>&copy; 2024 Universitas Nurdin Hamzah. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include ("../../components/footer-js.ejs") %>
</body>

</html>